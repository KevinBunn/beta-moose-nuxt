{
  "version": 2,
  "builds": [
    {
      "src": "api/routes/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": ["./api/**"]
      }
    }
  ],
  "routes": [
    { "src": "/api/releases", "dest": "api/routes/releases/index.js" },
    { "src": "/api/songs", "dest": "api/routes/songs/index.js" },
    { "src": "/api/(.*)", "dest": "api/routes/$1" },
    { "src": "/api", "dest": "api/routes/index.js" },
    { "src": "/_nuxt/.+", "headers": { "cache-control": "s-maxage=31536000" } },
    { "src": "/(.*)", "dest": "$1" }
  ]
}
